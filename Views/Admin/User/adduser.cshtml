@{
    ViewData["Title"] = "Thêm thành viên";
    Layout = "~/Views/Admin/Shared/AdminLayout.cshtml";
}
@model User
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thêm Thành viên</h1>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading"><i class="fas fa-user"></i> Thêm thành viên</div>
                <div class="panel-body">
                    @if (ViewBag.Msg != null)
                    {
                        <div id="msgAlert" class="alert bg-danger" role="alert">
                            <svg class="glyph stroked cancel">
                                <use xlink:href="#stroked-cancel"></use>
                            </svg>@ViewBag.Msg<a href="#" class="pull-right">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </div>

                    }
                    <div class="row justify-content-center" style="margin-bottom:40px">

                        <form asp-controller="User" asp-action="Add" method="post">
                            <div class="col-md-8 col-lg-8 col-lg-offset-2">
                                @* class="alert alert-danger" role="alert" *@
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" type="text" name="email" class="form-control" >
                                    <span asp-validation-for="Email" class=" alert-danger">

                                    </span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Mật khẩu</label>
                                    <input asp-for="Password" type="text" name="password" class="form-control">
                                    <span asp-validation-for="Password" class=" alert-danger" role="alert"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Name">Họ tên</label>
                                    <input asp-for="Name" type="text" name="name" class="form-control">
                                    <span asp-validation-for="Name" class=" alert-danger" role="alert"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Address">Địa chỉ</label>
                                    <input asp-for="Address" type="text" name="address" class="form-control">
                                    <span asp-validation-for="Address" class=" alert-danger" role="alert"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone">Số điện thoại</label>
                                    <input asp-for="Phone" type="text" name="phone" class="form-control">
                                    <span asp-validation-for="Phone" class=" alert-danger" role="alert"></span>
                                </div>

                                <!-- <div class="form-group">
                                    <label>Quyền</label>
                                    <select name="level" class="form-control">
                                        <option value="1">admin</option>
                                        <option selected value="2">user</option>
                                    </select>
                                </div> -->
                            </div>

                            <div class="row">
                                <div class="col-md-8 col-lg-8 col-lg-offset-2 text-right">

                                    <button class="btn btn-success" type="submit">Thêm thành viên</button>
                                    <button class="btn btn-danger" type="reset">Huỷ bỏ</button>
                                </div>
                            </div>
                        </form>

                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>

        </div>
    </div>

    <!--/.row-->
</div>

<!--end main-->
<script src="js/jquery-1.11.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/chart.min.js"></script>
<script src="js/chart-data.js"></script>